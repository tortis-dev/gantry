<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:volumes="clr-namespace:Gantry.Volumes"
             xmlns:icons="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gantry.Volumes.VolumeList"
             x:CompileBindings="True"
             x:DataType="volumes:VolumeViewModel">
    <StackPanel>
        <TextBlock Margin="10">Volumes</TextBlock>
        <DataGrid x:Name="Grid" ItemsSource="{Binding Volumes}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Driver" Binding="{Binding Driver}"/>
                <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataTemplate DataType="volumes:VolumeListItem">
                        <StackPanel Orientation="Horizontal">
                            <Button Background="Transparent" Command="{Binding ((volumes:VolumeViewModel)DataContext).RemoveVolumeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}">
                                <icons:FluentIcon Icon="Delete" IconVariant="Filled" IconSize="Size16" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
