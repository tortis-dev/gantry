<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:containers="clr-namespace:Gantry.Containers"
             xmlns:icons="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gantry.Containers.ContainerList"
             x:CompileBindings="True"
             x:DataType="containers:ContainerViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <StackPanel Grid.Row="0">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="10" FontSize="24">Containers</TextBlock>
            <Button Command="{Binding RefreshCommand}">
                <icons:FluentIcon Icon="ArrowClockwise"/>
            </Button>
        </StackPanel>
        <DataGrid x:Name="Grid"
                  SelectionMode="Single"
                  SelectionChanged="Grid_OnSelectionChanged"
                  SelectedItem="{Binding SelectedContainer}"
                  ItemsSource="{Binding Containers}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ShortId}" CanUserSort="False"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Image" Binding="{Binding Image}"/>
                <DataGridTextColumn Header="Ports" Binding="{Binding Ports}"/>
                <DataGridTextColumn Header="State" Binding="{Binding State}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataTemplate DataType="containers:ContainerListItem">
                        <StackPanel Orientation="Horizontal" Spacing="3">
                            <Button Background="Transparent" 
                                    Command="{Binding ((containers:ContainerViewModel)DataContext).StartContainerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}"
                                    >
                                <icons:FluentIcon Icon="Play" IconVariant="Filled" IconSize="Size16" />
                            </Button>
                            <Button Background="Transparent" 
                                    Command="{Binding ((containers:ContainerViewModel)DataContext).StopContainerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}"
                                    >
                                <icons:FluentIcon Icon="Stop" IconVariant="Filled" IconSize="Size16" />
                            </Button>
                            <Button Background="Transparent" 
                                    Command="{Binding ((containers:ContainerViewModel)DataContext).RemoveContainerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}"
                                    >
                                <icons:FluentIcon Icon="Delete" IconVariant="Regular" IconSize="Size16" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
        <GridSplitter Grid.Row="1" Background="DarkGray"></GridSplitter>
        <TabControl Grid.Row="2" >
            <TabItem Header="Log">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="Clear" Command="{Binding ClearLogsCommand}" Padding="10,5" />
                    </StackPanel>

                    <TextBox Grid.Row="1"
                             Margin="5"
                             Text="{Binding Logs}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontFamily="Consolas,Courier New,monospace"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto" />
                </Grid>
            </TabItem>

            <TabItem Header="Inspect">
                <TextBox Margin="5"
                         Text="{Binding InspectJson}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         FontFamily="Consolas,Courier New,monospace"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto" />
            </TabItem>

            <TabItem Header="Terminal">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Terminal Output Display -->
                    <TextBox Grid.Row="0"
                             x:Name="TerminalOutputBox"
                             Margin="5"
                             Text="{Binding TerminalOutput}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontFamily="Consolas,Courier New,monospace"
                             Background="#0C0C0C"
                             Foreground="#CCCCCC"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto" />

                    <!-- Input Area -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 x:Name="TerminalInputBox"
                                 Watermark="Enter command..."
                                 FontFamily="Consolas,Courier New,monospace"
                                 Background="#0C0C0C"
                                 Foreground="#CCCCCC"
                                 IsEnabled="{Binding IsTerminalActive}"
                                 KeyDown="TerminalInputBox_OnKeyDown" />

                        <Button Grid.Column="1"
                                Content="Send"
                                Margin="5,0,0,0"
                                Padding="10,5"
                                Command="{Binding SendTerminalInputCommand}"
                                CommandParameter="{Binding #TerminalInputBox.Text}" />
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
