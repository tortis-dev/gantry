<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:networks="clr-namespace:Gantry.Networks"
             xmlns:icons="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gantry.Networks.NetworkList"
             x:CompileBindings="True"
             x:DataType="networks:NetworkViewModel">
    <StackPanel>
        <TextBlock Margin="10">Images</TextBlock>
        <DataGrid x:Name="Grid" ItemsSource="{Binding Networks}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ShortId}" CanUserSort="False"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Driver" Binding="{Binding Driver}"/>
                <DataGridTextColumn Header="Scope" Binding="{Binding Scope}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding DisplayStatus}"/>
                <DataGridTextColumn Header="Containers" Binding="{Binding ContainersCount}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataTemplate DataType="networks:NetworkListItem">
                        <StackPanel Orientation="Horizontal">
                            <Button Background="Transparent" Command="{Binding ((networks:NetworkViewModel)DataContext).RemoveNetworkCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}">
                                <icons:FluentIcon Icon="Delete" IconVariant="Filled" IconSize="Size16" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
