<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:containers="clr-namespace:Gantry.Images"
             xmlns:icons="using:FluentIcons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Gantry.Images.ImageList"
             x:CompileBindings="True"
             x:DataType="containers:ImageViewModel">
    <StackPanel>
        <TextBlock Margin="10">Images</TextBlock>
        <DataGrid x:Name="Grid" ItemsSource="{Binding Images}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Repository" Binding="{Binding Repository}" />
                <DataGridTextColumn Header="Tag" Binding="{Binding Tag}"/>
                <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}"/>
                <DataGridTextColumn Header="Containers" Binding="{Binding ContainersCount}"/>
                <DataGridTemplateColumn Header="Actions">
                    <DataTemplate DataType="containers:ImageListItem">
                        <StackPanel Orientation="Horizontal">
                            <Button Background="Transparent" 
                                    Command="{Binding ((containers:ImageViewModel)DataContext).RemoveImageCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                    CommandParameter="{Binding}">
                                <icons:FluentIcon Icon="Delete" IconVariant="Regular" IconSize="Size16" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
